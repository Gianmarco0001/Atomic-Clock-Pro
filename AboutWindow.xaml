<Window x:Class="atomic_clock.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="220" Width="360" WindowStyle="None"
	Icon="/atomicicona.ico" 
        AllowsTransparency="True" Background="Transparent" WindowStartupLocation="CenterScreen">
    <Border CornerRadius="15" Background="#F0222222" BorderBrush="SpringGreen" BorderThickness="2">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="ATOMIC CLOCK PRO" Foreground="SpringGreen" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Separator Background="Gray" Margin="30,10"/>
            <TextBlock Text="Developed by:" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
            <TextBlock Text="Gianmarco Benedetti | GBytez" Foreground="Cyan" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5"/>
            <TextBlock Text="Special Version for ClickDay" Foreground="Gray" FontSize="10" HorizontalAlignment="Center" Margin="0,5"/>
            <Button Content="CHIUDI" Click="Close_Click" Margin="0,15,0,0" Width="100" Height="30" Background="#333" Foreground="White" BorderBrush="SpringGreen"/>
        </StackPanel>
    </Border>
</Window>