<Window x:Class="atomic_clock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AtomicClock Pro" Height="100" Width="320"
        Icon="/atomicicona.ico"
        WindowStyle="None" AllowsTransparency="True" 
        Background="Transparent" Topmost="True"
        ShowInTaskbar="False" MouseLeftButtonDown="Window_MouseDown"
        MouseWheel="Window_MouseWheel">

    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Sincronizza Ora" Click="SyncButton_Click"/>
            <MenuItem Header="Imposta Target" Click="SetTarget_Click"/>
            <Separator/>
            <MenuItem Header="Server NTP">
                <MenuItem Header="Google" Click="SetServer_Click" Tag="time.google.com"/>
                <MenuItem Header="Cloudflare" Click="SetServer_Click" Tag="time.cloudflare.com"/>
                <MenuItem Header="INRIM (Italia)" Click="SetServer_Click" Tag="ntp1.inrim.it"/>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Audio Alert (On/Off)" IsCheckable="True" IsChecked="True" x:Name="AudioMenu"/>
            <MenuItem Header="Blocca/Sblocca (ALT+K)" Click="Lock_Click"/>
            <Separator/>
            <MenuItem Header="About" Click="About_Click"/>
            <MenuItem Header="Chiudi" Click="Close_Click"/>
            <MenuItem Header="Rimuovi Target" Click="RemoveTarget_Click"/>
        </ContextMenu>
    </Window.ContextMenu>

    <Grid>
        <Border x:Name="MainBorder" CornerRadius="10" Background="#EE111111" BorderBrush="SpringGreen" BorderThickness="2">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="StatusText" Text="Sync in corso..." Foreground="Gray" FontSize="10" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock x:Name="ClockText" Text="00:00:00" Foreground="White" FontSize="36" FontWeight="Bold" FontFamily="Consolas"/>
                    <TextBlock x:Name="MsText" Text=".000" Foreground="SpringGreen" FontSize="20" FontWeight="Bold" FontFamily="Consolas" Margin="2,10,0,0"/>
                </StackPanel>
                <TextBlock x:Name="CountdownText" Text="Pro Atomic Clock" Foreground="Orange" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>